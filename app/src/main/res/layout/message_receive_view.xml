<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/receive_text_view"
            style="@style/TextAppearance.AppCompat.Body1"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="two weeks ago, we launched our Kickstarter campaign and by now we have already collected $180.000. Thanks to you and many other time-tracking "
            android:layout_gravity="left"
            android:background="@drawable/rounded_receive_view"
            android:textSize="16sp" />
    </FrameLayout>

</LinearLayout>