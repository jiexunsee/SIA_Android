<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/senderLogo"
        android:layout_alignBottom="@+id/messageBody"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="0dp"
        android:layout_gravity="bottom"
        android:src="@mipmap/sialogo"/>

    <LinearLayout
        android:id="@+id/messageBody"
        android:layout_toRightOf="@id/senderLogo"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_single_action_text_view"
            style="@style/TextAppearance.AppCompat.Body1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="two weeks ago, we launched our Kickstarter campaign and by now we have already collected $180.000. Thanks to you and many other time-tracking "
            android:layout_gravity="left"
            android:textSize="16sp"
            android:background="@drawable/rounded_top_half_view"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bottom_half_view">
            <TextView
                android:id="@+id/message_single_action_button"
                android:text="Choose Date"
                style="@style/Base.TextAppearance.AppCompat.Button"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="#009688"
                android:background="?android:attr/selectableItemBackground"/>
        </FrameLayout>

    </LinearLayout>



</RelativeLayout>