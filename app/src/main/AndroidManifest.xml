<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rep5.sialah.sia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sialogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ChatBot">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignInActivity" />

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".MyFirebaseInstanceIdService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".DropDownMenu"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".Ticket"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_ticket"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".PlaneChat" />
        <activity
            android:name=".MessageOptions"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".FlightCalendar"
            android:theme="@style/Theme.AppCompat.Translucent"></activity>
    </application>

</manifest>